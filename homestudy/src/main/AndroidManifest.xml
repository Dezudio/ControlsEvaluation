<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dezudio.android.controlsevaluation.homestudy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.dezudio.android.controlsevaluation.homestudy.START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.dezudio.android.controlsevaluation.homestudy.START_POWER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.dezudio.android.controlsevaluation.homestudy.RECORD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name=".PowerHourReceiver" />
        <receiver android:name=".AlarmReceiver" />

        <service android:name=".RecordService">

            <!--
            exported or an appropriate intent filter?!
            android:exported="true">
            -->
            <intent-filter>
                <action android:name="com.dezudio.android.controlsevaluation.action.RecordService" />
            </intent-filter>
        </service>

    </application>

</manifest>